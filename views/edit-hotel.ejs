<%- include('./partials/header.ejs') %>

<body>
<form action="/edit/<%=hotel._id%>" method="POST">
    <div>
        <label>Hotel Name</label>
        <input type="text" placeholder="Hotel Name" value="<%=hotel.name%>" name="name">
    </div>
    <div>
        <label>Hotel Address</label>
        <input type="text" placeholder="Address" value="<%=hotel.address%>" name="address">
    </div>
    <div>
        <label>Stars</label>
        <input type="number" placeholder="1" value=<%=hotel.star%> name="star" min="1" max="5">
    </div>
    <div>
        <label>Description</label>
        <input type="text" placeholder="Description" value="<%=hotel.description%>" name="description">
    </div>

    <div>
        <label>Valet Parking</label>
        <input type="radio" id="Yes" name="valetParking">
        <label for="Yes">Yes</label>
        <input type="radio" id="No" name="valetParking">
        <label for="No">No</label><br>
    </div>
    
    <div>
        <label>Dining Area</label>
        <input type="radio" id="Yes" name="diningAvailable" value="Yes">
        <label for="Yes">Yes</label>
        <input type="radio" id="No" name="diningAvailable" value="No">
        <label for="No">No</label><br>
    </div>

    <div>
        <label>Room Availability</label>
        <input type="radio" id="Yes" name="roomsAvailable" value="Yes">
        <label for="Yes">Yes</label>
        <input type="radio" id="No" name="roomsAvailable" value="No">
        <label for="No">No</label><br>
    </div>

    <div>
        <label>Taxi Service</label>
        <input type="radio" id="Yes" name="taxiServices" value="Yes">
        <label for="Yes">Yes</label>
        <input type="radio" id="No" name="taxiServices" value="No">
        <label for="No">No</label><br>
    </div>
    <button type="submit">Update</button>
</form>

<a href="/edit/<%=hotel._id%>"><button class="">Cancel</button></a>

<%- include('./partials/footer.ejs') %>